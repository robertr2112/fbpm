<% provide(:title, 'Create pool') %>
<!-- Render the season navigation bar -->
<%= render 'shared/mgmt_weeks_nav', season: current_season(1), week_number: 0 %>

<div class="container poolNew">
  <h1 class="poolHeader">Create New Pool</h1>
  <div class="col-sm-8">
    <%= simple_form_for @pool, html: { class: 'form-horizontal' },
          wrapper: :horizontal_form,
          wrapper_mappings: {
          check_boxes: :horizontal_collection,
          radio_buttons: :horizontal_collection_inline,
          file: :horizontal_file,
          boolean: :horizontal_boolean
    } do |f| %>
      <%= render 'fields', f: f %>
      <%= f.button :submit, 'Create pool', class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
