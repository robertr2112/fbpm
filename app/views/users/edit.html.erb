<% provide(:title, "Edit user") %>
<!-- Render the season navigation bar -->
<%= render 'shared/mgmt_weeks_nav', season: current_season(1), week_number: 0 %>

<div class="container pageContent">
  <h1 class="pageHeader">Update your profile</h1>
  <div class="col-sm-8">
    <%= simple_form_for @user, html: { class: 'form-horizontal' },
            wrapper: :horizontal_form,
            wrapper_mappings: {
              check_boxes: :horizontal_collection,
              radio_buttons: :horizontal_collection,
              file: :horizontal_file,
              boolean: :horizontal_boolean
    } do |f| %>
      <%= render 'fields', f: f, edit: 1 %>
      <%= f.button :submit, 'Update Profile', class: "btn btn-large btn-primary" %>
      <%= link_to 'Cancel', user_path(@user), type: 'button',
                   class: "btn btn-large btn-danger" %>
    <% end %>

    <p></p>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails", target="_blank">[Change?] </a>
  </div>
</div>
