<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-sm-8 offset-2">
    <div class="card card-primary">
      <div class="card-header"></div>
        <div class="card-body">
          <%= form_for(:session, url: login_path) do |f| %>

            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', id: 'signin_email',
                      placeholder: 'Email Address' %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', id: 'signin_password',
                      placeholder: 'Password' %>
            </div>
            <p><%= link_to "Don't remember password?", new_password_reset_path %> </p>

            <div class="form-check form-check-inline">
              <%= f.label :remember_me, class: "form-check-label" do %>
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <span>Remember me on this computer</span>
              <% end %>
            </div>

            <div class='row'>
              <%= f.submit "Log in", class: "btn btn-primary", id: 'signin_button' %>
            </div>

          <% end %>

          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>
