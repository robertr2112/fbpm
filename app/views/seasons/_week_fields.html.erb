
<div class='nested-fields card card-body bg-light'>
  <div class='row col-md-10'>
    <%= f.input :week_number, label: 'Week Number', placeholder: 'Week Number' %>
    <div class='align-items-center'>
      <%= link_to_remove_association "Remove", f, :class => "btn btn-xs btn-danger week-remove",
           data: {confirm: "Are you sure?"}  %>
    </div>
  </div>

  <div id="games">
    <%= f.simple_fields_for :games do |game| %>
      <%= render 'game_fields', f: game %>
    <% end %>
  </div>
  <div class="links">
    <%= link_to_add_association 'Add New Game', f, :games, class: "game-add"  %>
  </div>
</div>
