<% provide(:title, "Group Message") %>

<div class="container pageContent">
  <h1 class="pageHeader">Send Group Pool Message</h1>
  <%= form_tag pool_pool_messages_path, method: :post, role: 'form' do %>

    <div class="form-group row">
      <%= label_tag :subject, "Message Subject", class: "col-sm-3 form-label" %>
      <div class="col-sm-6">
        <%= text_field_tag :subject, params[:subject], size: 20, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= label_tag :msg, "Message Body", class: "col-sm-3 form-label" %>
      <div class="col-sm-6">
        <%= text_area_tag :msg, params[:msg], rows: "10", class: "form-control" %>
      </div>
    </div>

      <label class="radio_buttons optional col-sm-3 form-label">Send to:</label>
      <div class="form-check form-check-inline">
        <label class="radio-inline">
          <%= radio_button_tag :allMembers, true, true, class: 'radio' %>All Members
        </label>
      </div>
      <div class="form-check form-check-inline">
        <label class="radio-inline">
          <%= radio_button_tag :allMembers, false, false, class: 'radio' %>Surviving group
        </label>
      </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= submit_tag "Send email", class: "btn btn-large btn-primary" %>
      </div>
    </div>

  <% end %>
</div>
